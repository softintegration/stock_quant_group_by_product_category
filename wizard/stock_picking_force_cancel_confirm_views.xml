<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_confirm_picking_force_cancel" model="ir.ui.view">
        <field name="name">stock.picking.force.cancel.confirm.view.form</field>
        <field name="model">stock.picking.force.cancel.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirm cancel">
                <group>
                    <p>Do you really want to cancel the selected transfers?</p>
                </group>
                <footer>
                    <button name="confirm" string="Apply" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
